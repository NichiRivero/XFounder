<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <io.gloxey.cfv.CFButton
        android:id="@+id/btn_reg"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:text="Зарегистрироваться"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:font_name="banch.ttf" />

    <View
        android:id="@+id/img_back2"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@id/title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="112dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/icon_xf_white" />

    <io.gloxey.cfv.CFTextView
        android:id="@+id/txt_studio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:font_name="roboto_l.ttf"
        tools:text="Developed By 8Team" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="224dp"
        android:orientation="vertical">

        <io.gloxey.cfv.CFEditText
            android:id="@+id/edit_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/task_view_down_white"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:hint="Логин"
            android:inputType="text|textMultiLine|textCapSentences"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="20sp" />

        <io.gloxey.cfv.CFEditText
            android:id="@+id/edit_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/task_view_down_white"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:hint="Пароль"
            android:inputType="text|textMultiLine|textCapSentences"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="20sp" />

        <io.gloxey.cfv.CFButton
            android:id="@+id/btn_login"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:text="Войти"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            app:font_name="banch.ttf" />
    </LinearLayout>
</RelativeLayout>